<UserControl x:Class="ClientLourd.Views.Dialogs.ErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClientLourd.Views.Dialogs"
             mc:Ignorable="d"
             MaxWidth="400">
    <DockPanel Margin="10">
      <materialDesign:PackIcon  Margin="10" Height="50" Width="50" Kind="WarningCircle" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
      <StackPanel Orientation="Vertical">
          <TextBlock HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadline3TextBlock}" TextWrapping="Wrap" Text="Error !"/>
          <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadline5TextBlock}" TextWrapping="Wrap" Text="{Binding Path=Error, UpdateSourceTrigger=PropertyChanged}"/>
      </StackPanel>
    </DockPanel>
</UserControl>
