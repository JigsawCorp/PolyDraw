<UserControl x:Class="ClientLourd.Views.Dialogs.GameCreationDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClientLourd.Views.Dialogs"
             xmlns:controls="clr-namespace:ClientLourd.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10">
        
            <TextBlock FontWeight="Bold" Margin="20" HorizontalAlignment="Center" FontSize="35">Create a new game</TextBlock>
        
            <StackPanel Margin="0 20 0 20">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="TagText" Width="24" Height="24" Margin="5"></materialDesign:PackIcon>
                    <TextBlock  HorizontalAlignment="Center" FontSize="24" FontWeight="Bold">Type a word</TextBlock>
                </StackPanel>
                <TextBox MaxLength="20"  HorizontalAlignment="Center" Width="300" materialDesign:HintAssist.Hint="Word" Name="WordBox">
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0 20 0 20">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24" Margin="5"></materialDesign:PackIcon>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Text="Write 3 hints to help guessing the word "/>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Red" FontWeight="Bold" Text="{Binding ElementName=WordBox, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <TextBox MaxLength="30" Margin="5"  HorizontalAlignment="Center" Width="400" materialDesign:HintAssist.Hint="hint 1" />
                <TextBox MaxLength="30" Margin="5"  HorizontalAlignment="Center" Width="400" materialDesign:HintAssist.Hint="hint 2" />
                <TextBox MaxLength="30" Margin="5"  HorizontalAlignment="Center" Width="400" materialDesign:HintAssist.Hint="hint 3" />
            </StackPanel>
            <StackPanel Margin="0 20 0 20">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <materialDesign:PackIcon Margin="5" Width="24" Height="24" Kind="Draw"></materialDesign:PackIcon>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Text="Draw a representation of the word "/>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Red" FontWeight="Bold" Text="{Binding ElementName=WordBox, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <controls:Editor Width="800" Height="450"/>
            </StackPanel>
            <UniformGrid Columns="2">
                <Button Margin="5" Content="Confirm"/>
                <Button Margin="5" Command="materialDesign:DialogHost.CloseDialogCommand" Content="Cancel"/>
            </UniformGrid> 
        
    </StackPanel>
</UserControl>
