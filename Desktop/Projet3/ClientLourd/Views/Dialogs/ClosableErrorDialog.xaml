<UserControl x:Class="ClientLourd.Views.Dialogs.ClosableErrorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClientLourd.Views.Dialogs"
             mc:Ignorable="d"
             >
    <DockPanel Name="DockPanel">
        <Button Margin="10" Content="Ok" HorizontalAlignment="Center" Width="{Binding ElementName=DockPanel, Path=ActualWidth, Converter={StaticResource DivisionMathConverter}, ConverterParameter=2}"  Command="materialDesign:DialogHost.CloseDialogCommand" DockPanel.Dock="Bottom"/>
    </DockPanel>
</UserControl>
