<UserControl x:Class="ClientLourd.Views.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ClientLourd.Views"
             xmlns:converter="clr-namespace:ClientLourd.Utilities.Converters"
             mc:Ignorable="d"
             xmlns:c="clr-namespace:ClientLourd.ModelViews">
    <UserControl.Resources>
        <converter:MultiBindingConverter x:Key="MultiBindingConverter"/>
        <c:MainViewModel x:Key="MainViewModel"/>
    </UserControl.Resources>
    <DockPanel Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ActualWidth, Converter={StaticResource DivisionMathConverter}, ConverterParameter=4}">
        <DockPanel Background="WhiteSmoke" DockPanel.Dock="Bottom">
           <!-- <Button Margin="5" 
                            IsDefault="True" 
                            Style="{DynamicResource MaterialDesignToolForegroundButton}"
                            DockPanel.Dock="Right" 
                            Command="{Binding SendMessageCommand}">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource MultiBindingConverter}" >
                        <Binding ElementName="MessageTextBox" Path="."></Binding>
                        <Binding Path="DataContext.Username" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}"/>
                    </MultiBinding>
                </Button.CommandParameter>
                <materialDesign:PackIcon Kind="Send" Foreground="{StaticResource PrimaryHueMidBrush}"/>
            </Button>

            <Button DockPanel.Dock="Right">
                <materialDesign:PackIcon Kind="CheckboxMultipleBlankOutline" />
            </Button>-->
            <StackPanel DockPanel.Dock="Right" Margin="0 5 10 0">
                <Button Margin="5" 
                            IsDefault="True" 
                            Style="{DynamicResource MaterialDesignToolForegroundButton}"
 
                            Command="{Binding SendMessageCommand}">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource MultiBindingConverter}" >
                            <Binding ElementName="MessageTextBox" Path="."></Binding>
                            <Binding Path="DataContext.Username" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}"/>
                        </MultiBinding>
                    </Button.CommandParameter>
                    <materialDesign:PackIcon Kind="Send" Foreground="{StaticResource PrimaryHueMidBrush}"/>
                </Button>

                <Button Style="{DynamicResource MaterialDesignToolForegroundButton}">
                    <materialDesign:PackIcon Kind="CheckboxMultipleBlankOutline" Foreground="{StaticResource PrimaryHueMidBrush}" />
                </Button>
            </StackPanel>
            <TextBox 
                Background="White"
                    Margin="10" 
                    materialDesign:HintAssist.Hint="Type your message..."
                    TextWrapping="Wrap" 
                    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}" 
                    MaxLines="2"  
                    MinLines="2"  
                    Name="MessageTextBox" />
            </DockPanel>
        <TabControl SelectedIndex="{Binding SelectedChannelIndex}" Name="ConversationTabControl" ItemsSource="{Binding Channels}" DockPanel.Dock="Top">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <!--Conversation here-->
                    <local:Conversation/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</UserControl>
