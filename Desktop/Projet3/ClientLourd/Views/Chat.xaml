<UserControl x:Class="ClientLourd.Views.Chat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClientLourd.Views"
             mc:Ignorable="d">
    <DockPanel MinWidth="300">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <TextBox Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}"  Name="MessageTextBox" />
            <Button Content="Send" Command="{Binding SendMessageCommand}" CommandParameter="{Binding ElementName=MessageTextBox, Path=Text}"/>
        </StackPanel>
        <TabControl Name="ConversationTabControl" DockPanel.Dock="Top">
        </TabControl>
    </DockPanel>
</UserControl>
