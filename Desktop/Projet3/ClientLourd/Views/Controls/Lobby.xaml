<UserControl x:Class="ClientLourd.Views.Controls.Lobby"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientLourd.Views.Controls"
             mc:Ignorable="d" 
             xmlns:viewModels="clr-namespace:ClientLourd.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:LobbyViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        
        <ListView Grid.Row="0"  ItemsSource="{Binding CurrentLobby.Players}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Username}" Header="Username"></GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding IsCPU}" Header="IsCPU"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1">
            <Button Command="{Binding StartGameCommand}">Start Game</Button>
            <Button Command="{Binding LeaveLobbyCommand}">Leave lobby</Button>
            
        </StackPanel>
    </Grid>
</UserControl>
