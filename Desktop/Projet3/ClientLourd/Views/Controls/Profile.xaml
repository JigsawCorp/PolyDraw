<UserControl x:Class="ClientLourd.Views.Controls.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientLourd.Views.Controls"
             mc:Ignorable="d" 
             xmlns:viewModels="clr-namespace:ClientLourd.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:ProfileViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel Panel.ZIndex="1000">
            <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Profile view works!</TextBlock>
            <Button Content="CloseThis" Command="{Binding CloseProfileCommand}"/>
        </StackPanel>
        
        
    </Grid>
</UserControl>
