<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_match_image_view_match_type_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_solo_sprint_logo"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Coop"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/list_item_match_image_view_match_type_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a game title"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a game title"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_language"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_host"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Philippe"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_difficulty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_rounds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Philippe"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_host"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.15"/>

    <TextView
        android:id="@+id/list_item_match_text_view_match_player_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1/8"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_rounds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/list_item_match_button_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_match_button_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_match_text_view_match_player_count"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>