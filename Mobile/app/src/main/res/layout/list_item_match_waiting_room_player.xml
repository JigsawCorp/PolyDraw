<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_match_waiting_room_player_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FCFCFC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_item_match_waiting_room_player_image_view_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/list_Item_match_waiting_room_player_text_view_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@id/list_item_match_waiting_room_player_image_view_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/list_item_match_waiting_room_player_image_view_host_crown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_crown_black"
        android:tint="#FFD700"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_Item_match_waiting_room_player_text_view_player_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>