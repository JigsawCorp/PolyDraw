<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp">

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/color_black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_mode"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_difficulty"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/color_black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_duration"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_header_players"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/match_waiting_room_players_title"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/color_black"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/fragment_match_waiting_room_recycler_view_players"
        app:layout_constraintEnd_toEndOf="@id/fragment_match_waiting_room_recycler_view_players"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_match_waiting_room_recycler_view_players"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginEnd="327dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_header_players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_match_waiting_room_button_start_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/match_waiting_room_start_match_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_match_waiting_room_button_leave_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/match_waiting_room_leave_match_title"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_match_waiting_room_button_start_match"/>
</androidx.constraintlayout.widget.ConstraintLayout>