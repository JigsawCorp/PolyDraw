<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp">

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Name"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_match_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Mode"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_match_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Name"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_match_mode"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_match_waiting_room_recycler_view_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_host_name"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>