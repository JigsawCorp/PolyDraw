<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp">

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_header_match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Name"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_match_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_header_match_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_header_match_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Mode"
        android:layout_marginTop="60dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_match_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_match_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_header_match_mode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_header_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Name"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_match_mode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_header_host_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/fragment_match_waiting_room_text_view_header_players"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Players"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/fragment_match_waiting_room_recycler_view_players"
        app:layout_constraintEnd_toEndOf="@id/fragment_match_waiting_room_recycler_view_players"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_match_waiting_room_recycler_view_players"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginEnd="352dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_match_waiting_room_text_view_header_players"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_match_waiting_room_button_start_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_match_waiting_room_button_leave_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Match"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_match_waiting_room_button_start_match"/>
</androidx.constraintlayout.widget.ConstraintLayout>