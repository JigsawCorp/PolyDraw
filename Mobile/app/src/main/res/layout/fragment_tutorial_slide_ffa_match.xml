<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_ffa_match_text_01"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_01"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            android:src="@drawable/tutorial_slide_ffa_match_picture_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_01"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_header_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="@string/players"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_slide_ffa_match_image_view_01"/>

        <View
            android:id="@+id/fragment_tutorial_ffa_match_player_header_separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_header_players"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_02"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_margin="30dp"
            android:src="@drawable/tutorial_slide_ffa_match_picture_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_player_header_separator"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_ffa_match_text_02"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_slide_ffa_match_image_view_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_header_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="@string/top_bar"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_02"/>

        <View
            android:id="@+id/fragment_tutorial_ffa_match_top_bar_header_separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_header_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_03"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:src="@drawable/tutorial_slide_ffa_match_picture_03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_top_bar_header_separator"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_ffa_match_text_03"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_slide_ffa_match_image_view_03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_header_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="@string/draw"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_03"/>

        <View
            android:id="@+id/fragment_tutorial_ffa_match_draw_header_separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_header_draw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@drawable/tutorial_slide_ffa_match_picture_04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_draw_header_separator"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_ffa_match_text_04"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_slide_ffa_match_image_view_04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_header_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="@string/guess"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_04"/>

        <View
            android:id="@+id/fragment_tutorial_ffa_match_guess_header_separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_text_view_header_guess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/fragment_tutorial_ffa_match_image_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_guess_header_separator">

            <ImageView
                android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_05"
                android:layout_width="500dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:src="@drawable/tutorial_slide_ffa_match_picture_05"
                android:layout_gravity="start"/>

            <ImageView
                android:id="@+id/fragment_tutorial_slide_ffa_match_image_view_06"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:src="@drawable/tutorial_slide_ffa_match_picture_06"
                android:layout_gravity="end"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_tutorial_ffa_match_text_view_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_ffa_match_text_05"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="24sp"
            android:textColor="@color/color_black"
            app:layout_constraintTop_toBottomOf="@id/fragment_tutorial_ffa_match_image_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>