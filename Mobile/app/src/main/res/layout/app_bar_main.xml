<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?colorPrimary"
            android:theme="@style/ToolBarStyle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/polydraw_white"
                android:tint="?colorOnPrimary"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/hideShowMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:backgroundTint="?colorOnPrimaryDark"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/ic_message"
                app:tint="?attr/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/app_bar_main_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help_black"
                android:tint="?colorOnPrimary"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"/>

            <ImageView
                android:id="@+id/app_bar_main_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black"
                android:tint="?colorOnPrimary"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>