<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/achievement_title"
        style="@style/MyTheme.DayNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_trophy_24dp"
        android:drawablePadding="8dp"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/achievement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyTheme.DayNight"
        android:text="This is a description This is a description This is a description"
        app:layout_constraintTop_toBottomOf="@id/achievement_title"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/obtained_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyTheme.DayNight"
        android:textColor="@color/color_on_background_light"
        android:text="@string/obtained_title"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/achievement_description"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/achievement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyTheme.DayNight"
        android:textColor="@color/color_on_background_light"
        android:text="00:00:00"
        android:textStyle="italic"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/achievement_description"
        app:layout_constraintStart_toEndOf="@id/obtained_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>