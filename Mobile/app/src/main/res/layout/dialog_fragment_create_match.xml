<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_create_match_text_input_layout_match_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="@string/create_match_dialog_match_name_hint"
        app:errorEnabled="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_create_match_edit_text_match_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_background"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_create_match_container_max_players_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_input_layout_match_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dialog_create_match_text_view_max_players_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Max Players"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/dialog_create_match_edit_text_max_players"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="4"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_max_players_hint"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

        <ImageView
            android:id="@+id/dialog_create_match_button_remove_max_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/ic_remove_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/dialog_create_match_edit_text_max_players"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_max_players_hint"/>

        <ImageView
            android:id="@+id/dialog_create_match_button_add_max_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_add_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_max_players_hint"
            app:layout_constraintStart_toEndOf="@id/dialog_create_match_edit_text_max_players"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_create_match_container_virtual_players_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_create_match_container_max_players_selection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dialog_create_match_text_view_virtual_players_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Virtual Players"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/dialog_create_match_edit_text_virtual_players"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="0"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_virtual_players_hint"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"/>

        <ImageView
            android:id="@+id/dialog_create_match_button_remove_virtual_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/ic_remove_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/dialog_create_match_edit_text_virtual_players"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_virtual_players_hint"/>

        <ImageView
            android:id="@+id/dialog_create_match_button_add_virtual_player"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_add_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_create_match_text_view_virtual_players_hint"
            app:layout_constraintStart_toEndOf="@id/dialog_create_match_edit_text_virtual_players"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>